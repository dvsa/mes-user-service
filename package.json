{
  "name": "mes-user-service",
  "version": "0.1.0",
  "author": "DVSA",
  "license": "MIT",
  "description": "A suite of Lambda functions for CRUD of driving test examiner entries",
  "homepage": "https://github.com/dvsa/mes-user-service#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-user-service.git"
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-user-service/issues"
  },
  "scripts": {
    "clean": "rimraf build artefacts",
    "compile": "tsc",
    "compile-no-emit": "tsc --noEmit -p .",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "package": "./package.sh",
    "security-scan": "git secrets --scan && git log -p | scanrepo",
    "start": "sls dynamodb install && sls offline start",
    "test": "jest src",
    "test:coverage": "jest src --coverage",
    "test:integration": "npm run start & bash spec/helpers/bootstrap-integration-tests.sh && npm run compile && jest spec/integration/*.test.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.435.0",
    "@aws-sdk/lib-dynamodb": "^3.435.0",
    "@dvsa/mes-microservice-common": "1.1.0"
  },
  "devDependencies": {
    "@aws-sdk/credential-providers": "^3.435.0",
    "@dvsa/mes-journal-schema": "^1.3.1",
    "@types/aws-lambda": "^8.10.125",
    "@types/jest": "^29.5.8",
    "@types/node": "^18.18.6",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "aws-lambda-test-utils": "^1.3.0",
    "aws-sdk-client-mock": "^3.0.0",
    "eslint": "^8.52.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "node.extend": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "serverless": "^3.35.2",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-dynamodb": "^0.2.47",
    "serverless-offline": "^13.2.0",
    "serverless-webpack": "^5.13.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "typemoq": "^2.1.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "yamljs": "^0.3.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/spec"
    ],
    "transform": {
      "^.+\\.(ts)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    }
  }
}
